<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <gradient android:startColor="#6c38e11e"
                android:endColor="#a21f052d"
                android:angle="45">
            </gradient>
            <corners android:radius="13dp"/>
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp"/>
            <stroke android:color="#84c774d2" android:width="3dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#9668a953"
                android:endColor="#0dca41"
                android:angle="45">
            </gradient>
            <corners android:radius="20dp"/>
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"/>
            <stroke android:color="#7454e238" android:width="3dp"/>
        </shape>
    </item>

</selector>