<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
<shape android:shape="rectangle">
<gradient android:startColor="#6cffffff"
    android:endColor="#1f052d"
    android:angle="45">
</gradient>
    <corners android:radius="13dp"/>
    <padding android:bottom="5dp" android:left="44dp" android:right="44dp" android:top="5dp"/>
    <stroke android:color="#140126" android:width="3dp"/>
</shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#96ffffff"
                android:endColor="#1f052d"
                android:angle="45">
            </gradient>
            <corners android:radius="20dp"/>
            <padding android:bottom="5dp" android:left="40dp" android:right="40dp" android:top="5dp"/>
            <stroke android:color="#c38f38e2" android:width="3dp"/>
        </shape>
    </item>

</selector>